<h4>Seeking Style Advice SignUp</h4>

<form method="POST" action="/userHelp">

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="userHelpName" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="userHelpEmail">Email</label>
        <input type="email" class="form-control" id="userHelpEmail" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="userHelpPassword">Password</label>
        <input type="password" class="form-control" id="userHelpPassword" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="uploadImg">Upload Profile Image</label>
        <input type="file" class="form-control-file" id="profileImage">
    </div>
    <button type="submit" class="btn btn-primary">SignUp</button>

</form>