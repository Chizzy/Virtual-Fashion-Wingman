<h2>Signup</h2>

{{#if message}}
  <div class="alert alert-danger">{{message}}</div>
{{/if}}

<form method="post" action="/signup">
  <div class="form-group">
    <label for="email">Email</label>
    <input class="form-control" type="text" name="email" id="email">
  </div>

  <div class="form-group">
    <label for="email">Password</label>
    <input class="form-control" type="password" name="password" id="password">
  </div>

  <div class="form-check">
  <input class="form-check-input" type="radio" name="stylist" id="stylist-radio" value="option1" checked>
  <label class="form-check-label" for="radio-option">
    Stylist
  </label>
</div>

<div class="form-check">
  <input class="form-check-input" type="radio" name="seeking-style-advice" id="seeking-style-advice-radio" value="option2">
  <label class="form-check-label" for="radio-option">
    Seeking Style Advice
  </label>
</div>

  <input class="btn btn-default" type="submit">
</form>