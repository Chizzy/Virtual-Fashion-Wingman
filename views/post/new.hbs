<h2>Create Post</h2>

<form method="POST" action="/posts">
<div class="form-group row">
    <label for="upload-image" class="col-sm-2 col-form-label">Upload Outfit Image:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="image" name="img" placeholder="Image">
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">Content:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="outfit-content" name="content" placeholder="Enter info about your outfit">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-secondary">Post</button>
    </div>
  </div>
</form>